<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MercuryAndroidSDK" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!--        默认背景色-->
        <item name="android:windowBackground">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>



    <style name="RecycleViewScrollBarStyle">
        <item name="android:scrollbarThumbVertical">@drawable/rv_scrollbar</item>
        <item name="android:scrollbarTrackVertical">@drawable/rv_scrollbar_bkg</item>
        <item name="android:layout_marginLeft">87dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:layout_marginRight">67dp</item>
        <item name="android:scrollbarSize">3dp</item>
        <item name="android:overScrollMode">never</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:background">@color/black</item>
        <item name="android:layout_height">246dp</item>
    </style>

</resources>